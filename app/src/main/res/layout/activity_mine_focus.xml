<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9">
    <RelativeLayout
        style="@style/topbar_bg"
        app:layout_heightPercent="14%w">
        <TextView
            style="@style/topbar_textcolor"
            android:text="我的关注" />
        <Button
            style="@style/topbar_back"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#fff">
        <TextView
            android:textColor="@color/red"
            android:id="@+id/tv_mine_myfocus"
            android:paddingRight="15dp"
            android:gravity="right"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="我的关注"
            android:textSize="16sp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:textColor="@color/gary_textcolor"
            android:id="@+id/tv_mine_newstate"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="最新状态"
            android:textSize="16sp"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_mine_focus"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</com.zhy.android.percent.support.PercentLinearLayout>