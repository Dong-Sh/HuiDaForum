<?xml version="1.0" encoding="utf-8"?>

<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8faf9"
    android:orientation="vertical">

   <RelativeLayout
       style="@style/topbar_bg"
       app:layout_heightPercent="14%w">

      <TextView
          style="@style/topbar_textcolor"
          android:text="我的" />

      <ImageButton
          android:id="@+id/ib_mine_setting"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_alignParentRight="true"
          android:layout_centerInParent="true"
          android:layout_marginRight="20dp"
          android:background="@mipmap/my_setting_pre" />
   </RelativeLayout>

   <RelativeLayout
       android:id="@+id/rl_mine_top"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:layout_marginTop="8dp"
       android:background="#fff"
       app:layout_heightPercent="20%">

      <de.hdodenhof.circleimageview.CircleImageView
          app:civ_border_color="#fff"
          app:civ_border_width="1dp"
          android:id="@+id/iv_mine_pic"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="15dp"
          android:src="@mipmap/ic_launcher" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="3dp"
          android:layout_toRightOf="@id/iv_mine_pic"
          android:orientation="vertical">

         <TextView
             android:id="@+id/tv_mine_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="开心"
             android:textColor="@color/black"
             android:textSize="17sp" />

         <TextView
             android:id="@+id/tv_alivedays"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="2dp"
             android:text="活跃天数123天"
             android:textSize="12sp" />
      </LinearLayout>

      <ImageButton
          android:layout_width="10dp"
          android:layout_height="15dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="15dp"
          android:background="@mipmap/right_black" />
   </RelativeLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_marginTop="8dp"
       android:background="@color/linecolor" />

   <RelativeLayout
       android:id="@+id/rl_mine_focus"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_heightPercent="8.7%">

      <ImageView
          android:id="@+id/iv_mine_focus"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="20dp"
          android:background="@mipmap/my_follow" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@id/iv_mine_focus"
          android:text="我的关注"
          android:textColor="@color/black"
          android:textSize="16sp" />

      <ImageView
          android:layout_width="9dp"
          android:layout_height="14dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="15dp"
          android:background="@mipmap/right_gray" />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_alignParentBottom="true"
          android:background="@color/linecolor" />
   </RelativeLayout>

   <RelativeLayout
       android:id="@+id/rl_mine_collect"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_heightPercent="8.7%">

      <ImageView
          android:id="@+id/iv_mine_collect"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="20dp"
          android:background="@mipmap/home_collection_pre" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@id/iv_mine_collect"
          android:text="我的收藏"
          android:textColor="@color/black"
          android:textSize="16sp" />

      <ImageView
          android:layout_width="9dp"
          android:layout_height="14dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="15dp"
          android:background="@mipmap/right_gray" />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_alignParentBottom="true"
          android:background="@color/linecolor" />
   </RelativeLayout>

   <RelativeLayout
       android:id="@+id/rl_mine_comment"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_heightPercent="8.7%">

      <ImageView
          android:id="@+id/iv_mine_comment"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="20dp"
          android:background="@mipmap/home_comment_pre" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@id/iv_mine_comment"
          android:text="我的评论"
          android:textColor="@color/black"
          android:textSize="16sp" />

      <ImageView
          android:layout_width="9dp"
          android:layout_height="14dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="15dp"
          android:background="@mipmap/right_gray" />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_alignParentBottom="true"
          android:background="@color/linecolor" />
   </RelativeLayout>

   <RelativeLayout
       android:id="@+id/rl_mine_publish"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_heightPercent="8.7%">

      <ImageView
          android:id="@+id/iv_mine_publish"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="20dp"
          android:background="@mipmap/my_publish" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@id/iv_mine_publish"
          android:text="我的发表"
          android:textColor="@color/black"
          android:textSize="16sp" />

      <ImageView
          android:layout_width="9dp"
          android:layout_height="14dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="15dp"
          android:background="@mipmap/right_gray" />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_alignParentBottom="true"
          android:background="@color/linecolor" />
   </RelativeLayout>

   <RelativeLayout
       android:id="@+id/rl_mine_money"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_heightPercent="8.7%">

      <ImageView
          android:id="@+id/iv_mine_money"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="20dp"
          android:background="@mipmap/my_money" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@id/iv_mine_money"
          android:text="我的钱包"
          android:textColor="@color/black"
          android:textSize="16sp" />

      <ImageView
          android:layout_width="9dp"
          android:layout_height="14dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="15dp"
          android:background="@mipmap/right_gray" />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_alignParentBottom="true"
          android:background="@color/linecolor" />
   </RelativeLayout>

   <RelativeLayout
       android:id="@+id/rl_mine_draft"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_heightPercent="8.7%">

      <ImageView
          android:id="@+id/iv_mine_draft"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="20dp"
          android:background="@mipmap/my_draft" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@id/iv_mine_draft"
          android:text="我的草稿"
          android:textColor="@color/black"
          android:textSize="16sp" />

      <ImageView
          android:layout_width="9dp"
          android:layout_height="14dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="15dp"
          android:background="@mipmap/right_gray" />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_alignParentBottom="true"
          android:background="@color/linecolor" />
   </RelativeLayout>

   <RelativeLayout
       android:id="@+id/rl_mine_share"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_heightPercent="8.7%">

      <ImageView
          android:id="@+id/iv_mine_share"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="20dp"
          android:background="@mipmap/my_share" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@id/iv_mine_share"
          android:text="分享惠达APP"
          android:textColor="@color/black"
          android:textSize="16sp" />

      <ImageView
          android:layout_width="9dp"
          android:layout_height="14dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="15dp"
          android:background="@mipmap/right_gray" />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_alignParentBottom="true"
          android:background="@color/linecolor" />
   </RelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
