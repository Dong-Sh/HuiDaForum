<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <com.zhy.android.percent.support.PercentLinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#f8faf9">
      <RelativeLayout
          style="@style/topbar_bg"
          app:layout_heightPercent="14%w">
         <TextView
             style="@style/topbar_textcolor"
             android:text="我的" />
         <ImageButton
             android:id="@+id/ib_mine_setting"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:background="@mipmap/my_setting_pre"
             android:layout_centerInParent="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="20dp"/>
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/rl_mine_top"
          android:layout_width="match_parent"
          app:layout_heightPercent="25%w"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:background="#fff">
         <ImageView
             android:id="@+id/iv_mine_pic"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:scaleType="fitXY"
             android:src="@mipmap/ic_launcher"
             android:layout_centerVertical="true"
             android:layout_marginLeft="15dp"/>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/iv_mine_pic"
             android:orientation="vertical"
             android:layout_centerVertical="true"
             android:layout_marginLeft="3dp">
            <TextView
                android:id="@+id/tv_mine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开心"
                android:textColor="@color/black"
                android:textSize="17sp" />
            <TextView
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活跃天数123天" />
         </LinearLayout>
         <ImageButton
             android:layout_width="10dp"
             android:layout_height="15dp"
             android:background="@mipmap/right_black"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="15dp"/>
      </RelativeLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/linecolor"
          android:layout_marginTop="8dp"/>
      <RelativeLayout
          android:id="@+id/rl_mine_focus"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_heightPercent="15%w">
         <ImageView
             android:id="@+id/iv_mine_focus"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:layout_centerVertical="true"
             android:background="@mipmap/my_follow"
             android:layout_marginLeft="20dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="我的关注"
             android:textSize="16sp"
             android:layout_centerVertical="true"
             android:textColor="@color/black"
             android:layout_toRightOf="@id/iv_mine_focus"
             android:layout_marginLeft="10dp"/>
         <ImageView
             android:layout_width="9dp"
             android:layout_height="14dp"
             android:background="@mipmap/right_gray"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="15dp"/>
         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/linecolor"
             android:layout_alignParentBottom="true"/>
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/rl_mine_collect"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_heightPercent="15%w">
         <ImageView
             android:id="@+id/iv_mine_collect"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:layout_centerVertical="true"
             android:background="@mipmap/home_collection_pre"
             android:layout_marginLeft="20dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="我的收藏"
             android:textSize="16sp"
             android:layout_centerVertical="true"
             android:textColor="@color/black"
             android:layout_toRightOf="@id/iv_mine_collect"
             android:layout_marginLeft="10dp"/>
         <ImageView
             android:layout_width="9dp"
             android:layout_height="14dp"
             android:background="@mipmap/right_gray"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="15dp"/>
         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/linecolor"
             android:layout_alignParentBottom="true"/>
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/rl_mine_comment"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_heightPercent="15%w">
         <ImageView
             android:id="@+id/iv_mine_comment"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:layout_centerVertical="true"
             android:background="@mipmap/home_comment_pre"
             android:layout_marginLeft="20dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="我的评论"
             android:textSize="16sp"
             android:layout_centerVertical="true"
             android:textColor="@color/black"
             android:layout_toRightOf="@id/iv_mine_comment"
             android:layout_marginLeft="10dp"/>
         <ImageView
             android:layout_width="9dp"
             android:layout_height="14dp"
             android:background="@mipmap/right_gray"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="15dp"/>
         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/linecolor"
             android:layout_alignParentBottom="true"/>
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/rl_mine_publish"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_heightPercent="15%w">
         <ImageView
             android:id="@+id/iv_mine_publish"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:layout_centerVertical="true"
             android:background="@mipmap/my_publish"
             android:layout_marginLeft="20dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="我的发表"
             android:textSize="16sp"
             android:layout_centerVertical="true"
             android:textColor="@color/black"
             android:layout_toRightOf="@id/iv_mine_publish"
             android:layout_marginLeft="10dp"/>
         <ImageView
             android:layout_width="9dp"
             android:layout_height="14dp"
             android:background="@mipmap/right_gray"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="15dp"/>
         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/linecolor"
             android:layout_alignParentBottom="true"/>
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/rl_mine_money"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_heightPercent="15%w">
         <ImageView
             android:id="@+id/iv_mine_money"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:layout_centerVertical="true"
             android:background="@mipmap/my_money"
             android:layout_marginLeft="20dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="我的钱包"
             android:textSize="16sp"
             android:layout_centerVertical="true"
             android:textColor="@color/black"
             android:layout_toRightOf="@id/iv_mine_money"
             android:layout_marginLeft="10dp"/>
         <ImageView
             android:layout_width="9dp"
             android:layout_height="14dp"
             android:background="@mipmap/right_gray"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="15dp"/>
         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/linecolor"
             android:layout_alignParentBottom="true"/>
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/rl_mine_draft"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_heightPercent="15%w">
         <ImageView
             android:id="@+id/iv_mine_draft"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:layout_centerVertical="true"
             android:background="@mipmap/my_draft"
             android:layout_marginLeft="20dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="我的草稿"
             android:textSize="16sp"
             android:layout_centerVertical="true"
             android:textColor="@color/black"
             android:layout_toRightOf="@id/iv_mine_draft"
             android:layout_marginLeft="10dp"/>
         <ImageView
             android:layout_width="9dp"
             android:layout_height="14dp"
             android:background="@mipmap/right_gray"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="15dp"/>
         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/linecolor"
             android:layout_alignParentBottom="true"/>
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/rl_mine_share"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_heightPercent="15%w">
         <ImageView
             android:id="@+id/iv_mine_share"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:layout_centerVertical="true"
             android:background="@mipmap/my_share"
             android:layout_marginLeft="20dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="分享惠达APP"
             android:textSize="16sp"
             android:layout_centerVertical="true"
             android:textColor="@color/black"
             android:layout_toRightOf="@id/iv_mine_share"
             android:layout_marginLeft="10dp"/>
         <ImageView
             android:layout_width="9dp"
             android:layout_height="14dp"
             android:background="@mipmap/right_gray"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="15dp"/>
         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/linecolor"
             android:layout_alignParentBottom="true"/>
      </RelativeLayout>
   </com.zhy.android.percent.support.PercentLinearLayout>
</ScrollView>
