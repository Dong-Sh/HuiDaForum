<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7">
    <!--先占位，后边用Vitamio框架-->
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="130dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/line"/>
        <TextView
            android:id="@+id/tv_publish_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="程序员的牛掰技能大集锦"
            android:lines="1"
            android:gravity="center"
            android:textSize="19sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black" />
        <TextView
            android:visibility="invisible"
            android:id="@+id/publish_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="15sp"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:background="@drawable/publish_delete_button"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/linecolor"/>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_publish_item_time"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_alignParentLeft="true"
                android:textSize="16sp"
                android:text="2017/08/28"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_publish_item_hot"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:text="200阅读"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linecolor"/>
</LinearLayout>