<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/line1"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linecolor" />
    <RelativeLayout
        android:paddingRight="8dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:id="@+id/rl_reply_item"
        android:layout_below="@id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_reply_pic"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:id="@+id/ll_reply"
            android:layout_toRightOf="@id/iv_reply_pic"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开心GI66"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:id="@+id/tv_reply_name"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9月20日 下午12:30"
                android:id="@+id/tv_reply_time"/>
            <TextView
                android:layout_marginTop="5dp"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复：是计算机是计算机"
                android:id="@+id/tv_reply_content"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/ll_reply"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:lines="2"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa是计算机是计算机"
            android:id="@+id/tv_reply_posting"/>
    </RelativeLayout>
    <View
        android:layout_below="@id/rl_reply_item"
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linecolor" />
</RelativeLayout>