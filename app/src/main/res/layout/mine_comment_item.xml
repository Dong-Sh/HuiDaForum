<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="#fff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_mine_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:id="@+id/ll_comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_mine_pic"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp">
                <TextView
                    android:id="@+id/tv_mine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hello 未来的你"
                    android:textColor="@color/black"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/tv_comment_time"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017/08/12"
                    android:textColor="@color/linecolor"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_comment_name"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_comment_ownertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="这个视频有非常好的要学习的东西。"
                android:textColor="@color/black"
                android:textSize="17sp" />
            <!--先占位，后边用Vitamio框架-->
            <VideoView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="130dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/line"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="程序员的牛掰技能大集锦"
                    android:lines="1"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/linecolor"/>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_comment_fabulous"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/home_fabulous_nor"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/iv_comment_fabulous"
                    android:textSize="15sp"
                    android:text="赞"/>
            </RelativeLayout>

                <RelativeLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_comment_collect"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@mipmap/home_collection_nor"/>
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="15sp"
                        android:layout_toRightOf="@id/iv_comment_collect"
                        android:text="收藏"/>
                </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_comment_share"
                    android:layout_width="17dp"
                    android:layout_height="14dp"
                    android:background="@mipmap/my_p_share"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/iv_comment_share"
                    android:text="转发"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>