<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phone_back"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/test"
        android:layout_height="match_parent" />
    <com.zhy.android.percent.support.PercentRelativeLayout
        app:layout_heightPercent="43%"
        app:layout_widthPercent="50%"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/percentRelativeLayout2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:clickable="true"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/pop_text_ll"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:clickable="false"
                android:id="@+id/pop_text"
                android:layout_margin="15dp"
                android:background="@mipmap/put_text"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <TextView
                android:clickable="false"
                android:layout_margin="2dp"
                android:text="文字"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout
        app:layout_heightPercent="43%"
        app:layout_widthPercent="50%"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/percentRelativeLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:clickable="true"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/pop_picture_ll"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:clickable="false"
                android:id="@+id/pop_picture"
                android:layout_margin="15dp"
                android:background="@mipmap/put_phone"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <TextView
                android:clickable="false"
                android:text="图片"
                android:layout_margin="2dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout
        app:layout_heightPercent="43%"
        app:layout_widthPercent="50%"
        app:layout_marginBottomPercent="3%"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/pop_left_bottom_rela"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/percentRelativeLayout2">
        <LinearLayout
            android:clickable="true"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/pop_camera_ll"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:clickable="false"
                android:id="@+id/pop_camera"
                android:layout_margin="15dp"
                android:background="@mipmap/put_camera"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <TextView
                android:clickable="false"
                android:text="拍摄"
                android:textColor="#000"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout
        app:layout_heightPercent="43%"
        app:layout_widthPercent="50%"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginBottomPercent="3%"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/percentRelativeLayout3"
        android:layout_below="@+id/percentRelativeLayout2">
        <LinearLayout
            android:clickable="true"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/pop_movie_ll"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:clickable="false"
                android:id="@+id/pop_movie"
                android:layout_margin="15dp"
                android:background="@mipmap/put_movie"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <TextView
                android:clickable="false"
                android:text="视频"
                android:textColor="#000"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>