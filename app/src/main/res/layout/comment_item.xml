<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/linecolor" />

    <ImageView
        android:id="@+id/iv_comment_pic"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@id/line1"
        android:layout_marginLeft="15dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:id="@+id/rl_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/iv_comment_pic">

        <RelativeLayout
            android:id="@+id/ll_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开心GI66"
                android:textColor="@color/red"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_comment_name"
                android:layout_marginTop="5dp"
                android:text="9月20日 下午12:30" />
            <ImageView
                android:visibility="visible"
                android:id="@+id/photoFlvPath"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:background="@mipmap/ic_launcher"/>
            <TextView
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:id="@+id/tv_comment_title"
                android:text="SJKFLJALKJFL;AKJDFKLAJFKsfsdsddsdsdsfLJ"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:lines="2"/>
        </RelativeLayout>



        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll_comment"
            android:layout_marginTop="10dp"
            android:background="@color/linecolor" />
            <RelativeLayout
                android:layout_below="@id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="评论："
                    android:textColor="@color/black"/>

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/tv_comment_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_pinglun"
                    android:layout_marginTop="5dp"
                    android:lines="2"
                    android:text="看风景阿拉会计法垃圾 啊经十东路看风景阿拉会计法垃圾 "
                    />
            </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_comment"
        android:layout_marginTop="15dp"
        android:background="@color/linecolor" />
</RelativeLayout>