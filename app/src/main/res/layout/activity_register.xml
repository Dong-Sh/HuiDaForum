<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        style="@style/topbar_bg"
        app:layout_heightPercent="50%w">
        <ImageView
            android:paddingTop="75dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/register_top_back" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:background="@mipmap/rawad_pay_top_back"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="40dp"
        app:layout_heightPercent="8%w">
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="手机号"
            android:textColorHint="@color/red"
            android:id="@+id/et_register_username"
            android:background="@android:color/transparent"
            android:lines="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/red"
        android:layout_marginLeft="40dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="40dp"
        app:layout_heightPercent="8%w">
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="输入验证码"
            android:textColorHint="@color/red"
            android:textSize="16sp"
            android:id="@+id/et_register_code"
            android:background="@android:color/transparent"
            android:lines="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <Button
            android:id="@+id/bt_register_getcode"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="获取验证码"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/register_code_button"
            android:textColor="#fff" />
    </RelativeLayout>
    <View
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:background="@color/red"
        android:layout_marginLeft="40dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="40dp"
        app:layout_heightPercent="8%w">
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_register_password"
            android:background="@android:color/transparent"
            android:hint="密码"
            android:textSize="16sp"
            android:textColorHint="@color/red"
            android:lines="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:inputType="textPassword"/>
    </RelativeLayout>
    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/red"
        android:layout_marginLeft="40dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        app:layout_heightPercent="8%w">
        <EditText
            android:layout_width="300dp"
            android:inputType="textPassword"
            android:hint="确认密码"
            android:textColorHint="@color/red"
            android:layout_height="wrap_content"
            android:id="@+id/et_register_password_again"
            android:background="@android:color/transparent"
            android:lines="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/red"
        android:layout_marginLeft="40dp"/>
    <Button
        android:id="@+id/bt_login_login"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="注  册"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:padding="9dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_button"/>
</com.zhy.android.percent.support.PercentLinearLayout>